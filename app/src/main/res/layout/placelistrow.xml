<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AddPlace"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rowheight"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/placelist_name"
        style="@style/AddPlace"
        android:layout_width="300dp"
        android:layout_height="match_parent"></TextView>

    <Button
        android:id="@+id/placelist_houseno_button"
        style="@style/StandardButton"
        android:text="Nr."
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/placelist_houseno_spinner"
        style="@style/AddPlace"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:spinnerMode="dropdown"
        android:visibility="gone" />

    <TextView
        android:id="@+id/placelist_district"
        style="@style/AddPlace"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:singleLine="true"></TextView>

    <TextView
        android:id="@+id/placelist_type"
        style="@style/AddPlace"
        android:layout_width="200dp"
        android:layout_height="match_parent">

    </TextView>

</LinearLayout>

