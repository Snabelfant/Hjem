<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TravelSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/TravelSection.Element"
        android:layout_width="30dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/travelsection_departuretime"
            style="@style/TravelSection.Element.Time" />

        <TextView
            android:id="@+id/travelsection_arriveltime"
            style="@style/TravelSection.Element.Time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/travelsection_departurestop"
            style="@style/TravelSection.Element.Stop" />

        <TextView
            android:id="@+id/travelsection_arrivalstop"
            style="@style/TravelSection.Element.Stop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/travelsection_icon"
                style="@style/LineIcon"
                android:src="@drawable/vent" />

            <TextView
                android:id="@+id/travelsection_lineno"
                style="@style/LineName" />

            <TextView
                android:id="@+id/travelsection_destination"
                style="@style/LineDestination" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/travelsection_traveltime"
                style="@style/TravelSection.Element"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/travelsection_deviations"
        style="@style/StandardButton"
        android:layout_width="match_parent"
        android:background="@color/obs_background"
        android:text="!" />

</LinearLayout>

