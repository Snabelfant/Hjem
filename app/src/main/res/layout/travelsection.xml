<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/travelsection_departuretime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/travelsection_departurestop"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/travelsection_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/vent" />

    <TextView
        android:id="@+id/travelsection_lineno"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff0000ff"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/travelsection_destination"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#ff0000ff"
        android:ellipsize="marquee"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/travelsection_arriveltime"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/travelsection_arrivalstop"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/travelsection_traveltime"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="20dp" />


</LinearLayout>

