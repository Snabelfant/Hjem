<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="Base">
        <item name="android:textSize">@dimen/default_textsize</item>
        <item name="android:textColor">@color/default_textcolor</item>
    </style>

    <style name="AddPlace" parent="Base">
        <item name="android:background">@color/travelselection_background</item>
    </style>

    <style name="EditLocation" parent="Base">
        <item name="android:background">@color/travelselection_background</item>
    </style>

    <style name="RealtimeProgress" parent="Base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/obs_background</item>
    </style>

    <style name="TravelSelectionSpinnerDropDown" parent="Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/travelselection_background</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="TravelSelectionSpinner" parent="Base">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="LineIcon">
        <item name="android:layout_width">@dimen/iconwidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LineDestination" parent="Base">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_background</item>
        <item name="android:textColor">@color/line_textcolor</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="LineName" parent="Base">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">@dimen/rowheight</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/line_background</item>
        <item name="android:textColor">@color/line_textcolor</item>
    </style>

    <style name="SummaryLine" parent="Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rowheight</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/summary_background</item>
    </style>

    <style name="SummaryLine.Element"></style>

    <style name="SummaryLine.Element.Time">
        <item name="android:layout_width">@dimen/time_width</item>
    </style>

    <style name="SummaryLine.Element.Duration">
        <item name="android:layout_width">@dimen/duration_width</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="TravelSection" parent="Base">
        <item name="android:background">@color/travelsection_background</item>
    </style>

    <style name="TravelSection.Element">
        <item name="android:layout_height">@dimen/rowheight</item>
    </style>

    <style name="TravelSection.Element.Time">
        <item name="android:layout_width">@dimen/time_width</item>
    </style>

    <style name="TravelSection.Element.Stop">
        <item name="android:layout_width">250dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="WalkingSection" parent="Base">
        <item name="android:background">@color/walkingsection_backhround</item>
    </style>

    <style name="WalkingSection.Element">
        <item name="android:layout_height">@dimen/rowheight</item>
    </style>

    <style name="StandardButton" parent="Base">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
